<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtTextoSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi texto simple" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="Mi texto derecha" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mi texto con color"
        android:textColor="#0040FF" />

    <TextView
        android:id="@+id/txtTextoConImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableBottom="@drawable/android_icono"
        android:gravity="center_horizontal"
        android:text="Mi cadena con imagen" />

</LinearLayout>